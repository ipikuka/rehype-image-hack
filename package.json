{
  "name": "rehype-image-toolkit",
  "version": "0.15.0-beta",
  "description": "Rehype plugin to enhance markdown image syntax `![]()` and MDX media elements (`img`, `audio`, `video`) by styling and adding attributes, wrapping with figure and adding captions, auto-linking to originals, converting images to video/audio based on the file extension",
  "type": "module",
  "exports": "./dist/esm/index.js",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc --build && type-coverage",
    "format": "npm run prettier && npm run lint",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "test": "vitest --watch=false",
    "test:watch": "vitest",
    "test:md": "vitest test.md.spec.ts",
    "test:html": "vitest test.html.spec.ts",
    "test:mdx": "vitest test.mdx.spec.ts",
    "test:mdx2": "vitest test.mdx2.spec.ts",
    "test:ref": "vitest test.reference.spec.ts",
    "test:refmdx": "vitest test.reference.mdx.spec.ts",
    "prepack": "npm run build",
    "prepublishOnly": "npm run test && npm run format && npm run test-coverage",
    "test-coverage": "vitest run --coverage"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipikuka/rehype-image-toolkit.git"
  },
  "keywords": [
    "unified",
    "rehype",
    "hast",
    "markdown",
    "mdx",
    "plugin",
    "rehype plugin",
    "rehype image",
    "rehype video",
    "rehype audio",
    "rehype-figure",
    "rehype plugin image",
    "rehype plugin video",
    "rehype plugin audio",
    "rehype plugin figure"
  ],
  "author": "ipikuka <talatkuyuk@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ipikuka/rehype-image-toolkit#readme",
  "bugs": {
    "url": "https://github.com/ipikuka/rehype-image-toolkit/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@mdx-js/mdx": "^3.1.0",
    "@types/dedent": "^0.7.2",
    "@types/estree": "^1.0.7",
    "@types/node": "^22.14.1",
    "@types/react-dom": "^18.3.6",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/eslint-plugin": "^1.1.43",
    "dedent": "^1.5.3",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "next-mdx-remote-client": "^1.1.0",
    "prettier": "^3.5.3",
    "react-dom": "^18.3.1",
    "rehype-parse": "^9.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "rimraf": "^5.0.10",
    "type-coverage": "^2.29.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "unified": "^11.0.5",
    "vfile": "^6.0.3",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@types/hast": "^3.0.4",
    "estree-util-value-to-estree": "^3.3.3",
    "hast-util-whitespace": "^3.0.0",
    "mdast-util-mdx-jsx": "^3.2.0",
    "space-separated-tokens": "^2.0.2",
    "style-to-js": "^1.1.16",
    "unist-util-visit": "^5.0.0",
    "unist-util-visit-parents": "^6.0.1"
  },
  "peerDependencies": {
    "unified": "^11"
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "strict": true
  },
  "sideEffects": false
}
